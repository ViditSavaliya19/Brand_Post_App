<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Activity.Business_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/backgroung">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Business Profile"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            app:civ_border_width="2dp"
            android:id="@+id/card_image"
            app:civ_border_color="@color/backgroung"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/name_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Personal name"
                android:textColor="@color/backgroung"
                android:layout_marginLeft="10dp"
                android:textColorHint="#9D9D9D"
                android:backgroundTint="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/business_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Designation"
                android:layout_marginLeft="10dp"
                android:textColor="@color/backgroung"
                android:textColorHint="#9D9D9D"
                android:backgroundTint="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:textColorHint="#9D9D9D"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/number_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Number"
                android:layout_marginLeft="10dp"
                android:textColorHint="#9D9D9D"
                android:textColor="@color/backgroung"
                android:backgroundTint="#00000000"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:id="@+id/btn_save"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>