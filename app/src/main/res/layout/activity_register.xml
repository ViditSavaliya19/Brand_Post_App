<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Activity.Register_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@color/backgroung"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/r_Name_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:hint="Enter Name"
                android:textColor="@color/backgroung"
                android:textColorHint="#B1B1B1" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/r_Email_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:hint="Enter Email"
                android:textColor="@color/backgroung"
                android:textColorHint="#B1B1B1" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/r_Password_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:hint="Enter Password"
                android:textColor="@color/backgroung"
                android:textColorHint="#B1B1B1" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/r_Business_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:hint="Enter Business Name"
                android:textColor="@color/backgroung"
                android:textColorHint="#B1B1B1" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/r_Mobile_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:hint="Enter Phone"
                android:textColor="@color/backgroung"
                android:textColorHint="#B1B1B1" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Register_btn"
            android:layout_height="50dp"
            android:background="@drawable/button_shape">
            <TextView
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/backgroung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registrator"/>
        </LinearLayout>

        <TextView
            android:id="@+id/r_Login"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/backgroung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You have alredy Account? Sing in"/>
    </LinearLayout>
</LinearLayout>